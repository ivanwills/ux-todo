<div class="ux-todo">
    <h1>TODOs</h1>
    <ul>
        {{#each todos:index}}
        <li>
            <ux-checkbox
                checked="{{.checked}}"
            >
            <span class={{.checked && 'checked'}}>{{.text}}</span>
            </ux-checkbox>
        </li>
        {{/each}}
        <li>
            <input type="text" value="{{newTodo}}" />
            <input type="button" value="Add" on-click="addTodo" />
        </li>
    </ul>
</div>
